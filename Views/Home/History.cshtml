@model IEnumerable<PROG_POE1.Models.Claim>

@{
    ViewBag.Title = "Claim History";
}

<h2>Your Claim History</h2>
<hr />

@if (!Model.Any())
{
    <p>No claims submitted yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date Submitted</th>
                <th>Total Hours</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.DateSubmitted.ToString("yyyy-MM-dd")</td>
                    <td>@claim.TotalHours</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.TotalAmount.ToString("C")</td>
                    <td>@claim.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
